%form.comment-form{action: '#', method: :post, entype: "multipart/form-data"}
  .form
    %h2 
      = translate :share_your_thoughts_username
    %input{type: :hidden, name: :post_topic_id, id: :post_topic_id, value: 0}
    
    %input.text.has-default-value.required{name: 'login_name', id: 'login_name', type: :text, value: translate(:your_name) + "…"}
    %input.text.has-default-value.required{name: 'login_city', id: 'login_city', type: :text, value: translate(:your_city) + "…"}
    %input.text.has-default-value.required{name: 'login_country', id: 'login_country', type: :text, value: translate(:your_country) + "…"}
    %input.file.has-default-value.required{name: 'login_image_file', id: 'login_image_file', type: :file, value: translate(:your_photo) + "…"}
    %input.f-submit{type: :submit, value: translate(:login)}